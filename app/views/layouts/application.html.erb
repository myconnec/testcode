<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width">
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
    <%= render "partials/google_analytics" %>
  </head>
  <body>
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <% if request.fullpath != '/' %>
            <%= link_to image_tag("connechub.svg", :alt => ENV["APP_NAME"], height: 'auto', width: '65%'), root_path, style: "float: left" %>
          <% end %>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li><%= link_to 'POST A VIDEO AD', new_listing_path, class: "post" %></li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Your Account <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li><%= link_to 'Your Profile', user_path(current_user.username) %></li>
                  <li><%= link_to 'Edit Your Account', edit_user_registration_path %></li>
                </ul>
              </li>
              <li><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
            <% else %>
              <li><%= link_to 'Login', new_user_session_path %></li>
              <li><%= link_to 'Sign Up', new_user_registration_path %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <br />
    <br />
    <br />
    <br />
    <br />

    <div class = "container">
      <div class="flash">
          <% flash.each do |key, value| %>
            <div class="alert alert-<%= key %> alert-dismissible">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
              <%= value %>
            </div>
          <% end %>
      </div>
    </div>

    <div class = "container">
      <script>
        console.log('head')
      </script>
      <%= yield %>
    </div>

    <br />
    <br />
    <br />
    <br />

    <nav class="navbar navbar-default navbar-fixed-bottom">
        <div class="container">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#myNavbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <div class="collapse navbar-collapse" id="myNavbar">
                <div class="row1">
                    <ul class="nav navbar-nav">
                      <li class="dropup">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="ts-label">About Us <i class="fa fa-sort"></i></span></a>
                        <ul class="dropdown-menu dropup dropup-menu" role="menu" aria-labelledby="dLabel">
                          <li><%= link_to 'Career With Us', career_path %></a></li>
                          <li><%= link_to 'About Us', about_path %></li>
                          <li><%= link_to 'How It Works', '/howitworks/index' %></li>
                          <li><%= link_to 'Prices', '/prices/index' %></li>
                        </ul>
                      </li>
                      <li class="dropup">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="ts-label">Legal <i class="fa fa-sort"></i></span></a>
                        <ul class="dropdown-menu dropup dropup-menu" role="menu" aria-labelledby="dLabel">
                          <li><%= link_to 'Terms of Conditions', terms_path %></li>
                          <li><%= link_to 'Privacy Policy', privacy_path %></li>
                          <li><%= link_to 'Posting Terms of Use', postterm_path %></li>
                        </ul>
                      </li>
                      <li class="dropup">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="ts-label">Help <i class="fa fa-sort"></i></span></a>
                        <ul class="dropdown-menu dropup dropup-menu" role="menu" aria-labelledby="dLabel">
                          <li><%= link_to 'FAQs', faq_path %></li>
                          <li><%= link_to 'Safety Tips', safetytips_path %></li>
                        </ul>
                      </li>
                      <li class="li_no_bg">
                        <span class="ts-copy">Â© Connechub 2019</span>
                      </li>
                    </ul>
                </div>
            </div>
          </div>
      </nav>
      <%# = console %>
    </body>
</html>
