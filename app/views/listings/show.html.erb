<div class="container_12">
    <div class="clear"></div>
    <%= link_to 'Connechub', root_path %> > <%= link_to @listing.category.name, category_path(@listing.category) %> > <%= link_to @listing.subcategory.name, category_subcategory_path(@listing.category, @listing.subcategory) %>
    <hr>
    <div class="grid_6">
        <p>
            <div>
                <%= videojs_rails sources: {
                    mp4: @presigned_media_url
                },
                controls: true,
                autoplay: false,
                preload: true,
                width:"450",
                height:"450" do%><% end %>
            </div>
            <small><b>Posted By: &nbsp;</b><%= @listing.user.email %></small>
            <br><br><br>
            <%= @media_url %>
            <%= render 'comments/comment' %>
        </p>
    </div>

    <div class="grid_6">
        <div class="post-metadata">
            <%= image_tag @listing.user.avatar.url(:thumb), class: 'avatar' %>
            <div class="post-info">
                <div class="post-title">
                    <span>
                        <%= link_to @listing.user.username, user_path(@listing.user.username) %>
                        <div class= "pull-right price1" ><b>$<%= @listing.price %></b></div>
                    </span>
                </div>
            <i class="fa fa-map-marker" aria-hidden="true"></i> <small class="post-creation"><%= @listing.city %>, <%= @listing.state %> <%= @listing.zipcode %></small>
        </div>
    </div>
    <hr>

    <div class="text-muted">
        <small><b>Video ID:</b> <%= @listing.id %></small>
        <small>&nbsp; &nbsp; &nbsp;<i class= "fa fa-eye" aria-hidden="true"></i></small>
        <small><%= "#{@listing.impressionist_count}" %> views</small>
        <small>&nbsp; &nbsp; &nbsp;<i class="fa fa-calendar" aria-hidden="true"></i></small>
        <small><%= time_ago_in_words(@listing.created_at) %></small> @ <small><%= @listing.created_at.to_formatted_s(:short) %></small>
        <% if params[:action] === 'show' %>
        <small>&nbsp; &nbsp; &nbsp;
            <a
                style="color:red"
                href="mailto:admin@connechub.com?subject=Reporting%20Post%20<%= @listing.id %>&body=I%20would%20like%20to%20report%20this%20ConnecHub%20post%20for%20violating%20the%20TOS%20/%20EULA%20or%20other%20reason%20(please explain)."
                target="_new"
            >
                <i class="fa fa-flag"></i>&nbsp;Report Post
            </a>
        </small>
        <% end %>
    </div>

    <p>
        <div class="hero-title">
            <hr>
            <span>
                <b><%= @listing.title %></b>
                <%= link_to like_listing_path(@listing), method: :put, class: 'pull-right' do %>
                    <i class = "fa fa-heart"></i>
                    <%= @listing.votes_for.size %>
                <% end %>
            </span>
        </div>
        <br>

        <div>
            <%= simple_format (@listing.description) %>
        </div>
        <hr>

        <div class="pull-right"><%= mail_to(@listing.user.email, "Message the Seller", class: 'btn btn-success btn-sm', subject: @listing.title, body: 'Reach out to message the seller about their ad.') %> </div>
        <br>

        <div>
            <% if @listing.user == current_user %>
                <%= link_to 'Change Video', "upload/#{@listing.id}" %> |
                <%= link_to 'Delete', @listing, method: :delete, data: {confirm: "Are you sure you want to delete this listing?"} %> |
                <%= link_to 'Edit Listing', edit_listing_path(@listing) %></span>
            <% end %>
        </div>
        <br>

        <script type='text/javascript' src='//platform-api.sharethis.com/js/sharethis.js#property=592c9b0955350600125cfef2&product=sticky-share-buttons' async='async'></script> </p>

    </div>
</div>
