    document.getElementById('listing_city').value = 'Tampa';
    document.getElementById('listing_state').value = 'Florida';
    document.getElementById('listing_zipcode').value = '33759';
    document.getElementById('listing_description').value = 'Test Description';
};
</script>
<% end %>