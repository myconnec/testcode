<div class="container-fluid">
  <div class="text-center">
    <%= image_tag("connechub.svg", :alt => ENV['APP_NAME'], height: 'auto', width: '50%') %>
  </div>

  <br>
  <br>

  <div class="form-group text-center row">
    <%= form_tag search_listings_path, method: :get do |f| %>

      <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
        <%= text_field_tag :search, nil, placeholder: 'keywords', class: "form-control"%>
      </div>

      <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
        <%= text_field_tag :location, nil, placeholder: 'city, state or zip', class: "form-control"%>
      </div>

      <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
        <%= select_tag :category, options_for_select(Category.all.map{ |c| [c.name, c.id]}), class: "form-control"%>
      </div>

      <div class="col-xs-12 col-sm-4 col-sm-offset-4" style="margin-top: 25px">
        <%= submit_tag 'Search', class: "btn btn-block btn-success" %>
      </div>

    <% end %>
  </div>

  <br>
  <br>
  <br>

  <div align="center" style="width: 100%;"><%= image_tag("directlistsm.jpg", :alt => "directory list") %></div>

  <br>

  <ul style="width: 75%; margin: 0px auto;" class="ch_card_container">

    <li class="ch_card">
      <div class="catg_title">
        <i class = "glyphicon glyphicon-shopping-cart"></i> <strong><%= link_to 'Sale', category_path(@sale) %></strong>
      </div>
      <ul class="catg_items">
        <% @sale.subcategories.each do |subcategory| %>
          <li><%= link_to subcategory.name, category_subcategory_path(@sale, subcategory) %></li>
        <% end %>
      </ul>
    </li>

    <li class="ch_card">
      <div class="catg_title">
