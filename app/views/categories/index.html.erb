    </li>

    <li class="ch_card">
      <div class="catg_title">
        <i class = "glyphicon glyphicon-briefcase"></i> <strong><%= link_to 'Jobs', category_path(@jobs) %></strong>
      </div>
      <ul class="catg_items">
        <% @jobs.subcategories.each do |subcategory| %>
          <li><%= link_to subcategory.name, category_subcategory_path(@jobs, subcategory) %></li>
        <% end %>
      </ul>
