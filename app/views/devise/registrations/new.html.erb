<%= render :partial => 'partials/header_page_title', locals: {
    title: 'Sign Up'
} %>

<!-- Content section Start --> 
<section class="register section-padding">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-12 col-xs-12">
                <div class="register-form login-area">
                    <h3>Sign Up</h3>
                        <%= form_for(
                            resource,
                            as: resource_name,
                            url: registration_path(resource_name),
                            html: { class: "login-form" }
                        ) do |f| %>
                        <div class="form-group">
                            <%= devise_error_messages! %>
                        </div>
                        <div class="form-group">
                            <div class="input-icon">
                                <i class="lni-user"></i>
                                <%= f.text_field :username,
                                    class: "form-control",
                                    placeholder:"Username",
                                    value: ""
                                %>
                            </div>
                        </div> 
                        <div class="form-group">
                            <div class="input-icon">
                                <i class="lni-envelope"></i>
                                <%= f.email_field :email,
                                    class: "form-control",
                                    placeholder:"Email Address",
                                    value: ""
                                %>
                            </div>
                        </div> 
                        <div class="form-group">
                            <div class="input-icon">
                                <i class="lni-lock"></i>
                                <%= f.password_field :password,
                                    class: "form-control",
                                    placeholder:"Password",
                                    value: ""
                                %>
                            </div>
                        </div>    
                        <div class="form-group">
                            <div class="input-icon">
                                <i class="lni-lock"></i>
                                <%= f.password_field :password_confirmation,
                                    class: "form-control",
                                    placeholder:"Confirm Password",
                                    value: ""
                                %>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-icon" style="margin: auto; width: 75%; border: 0px solid black;">
                                <%= recaptcha_tags %>
                            </div>
                        </div>
                        <div class="form-group mb-3">
                            <div class="custom-control custom-checkbox">
                                <%= f.check_box :agreement %>
                                <%= f.label :agreement, 'By Signing Up, you accept our Terms of Servcie' %>
                            </div>
                        </div>
                        <div class="text-center">
                            <%= f.submit "Sign Up", class: "btn btn-common log-btn" %>
                        </div>
                        <div class="form-group mt-4">
                            <ul class="form-links">
                                <li class="float-right"><a href="/users/sign_in">Back to Sign In</a></li>
                            </ul>
                        </div> 
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Content section End --> 