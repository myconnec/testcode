<%= render :partial => 'partials/header_page_title', locals: {
    title: 'Sign In'
} %>

<!-- Content section Start --> 
<section class="login section-padding">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-12 col-xs-12">
                <div class="login-form login-area">
                    <h3>Sign In</h3>
                    <%= form_for(
                        resource,
                        as: resource_name,
                        url: user_session_path,
                        html: { class: "login-form", role: "form"}
                    ) do |f| %>
                        <div class="form-group">
                            <%= devise_error_messages! %>
                        </div>
                        <div class="form-group">
                            <div class="input-icon">
                                <i class="lni-envelope"></i>
                                <%= f.email_field :email,
                                    autofocus: true,
                                    class: "form-control",
                                    id: "sender-email",
                                    name: "email",
                                    placeholder:"Email Address"
                                %>
                            </div>
                        </div> 
                        <div class="form-group">
                            <div class="input-icon">
                                <i class="lni-lock"></i>
                                <%= f.password_field :password,
                                    autocomplete: "off" ,
                                    class: "form-control",
                                    name: "password",
                                    placeholder:"Password"
                                %>
                            </div>
                        </div>
                        <div class="form-group mb-3">
                            <% if devise_mapping.rememberable? -%>
                            <div class="custom-control custom-checkbox">
                                <%= f.check_box :remember_me %>
                                <%= f.label :remember_me %>
                            </div>
                            <% end %>
                        </div>
                        <div class="text-center">
                            <%= f.submit "Log in", class: "btn btn-common log-btn" %>
                        </div>
                        <div class="form-group mt-4">
                            <ul class="form-links">
                            <li class="float-left">
                                <%= link_to "Don't have an account?", '/users/sign_up' %>
                            </li>
                            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                            <li class="float-right">
                                <%= link_to "Forgot password?", '/users/password/new' %><br>
                            </li>
                            <% end -%>
                            </ul>
                        </div> 
                
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Content section End --> 
