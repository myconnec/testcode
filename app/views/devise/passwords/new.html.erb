<div class="container" style="margin-top:40px" id="app_view_devise">
		<div class="row">
			<div class="col-sm-6 col-md-4 col-sm-offset-3 col-md-offset-4">
				<div class="panel panel-default">
					<div class="panel-heading">
						<h3 class="sign-h"><span id="sign-icon"><i class="glyphicon glyphicon-lock"></i></span>Forgot password?</h3>
					</div>
					<div class="panel-body">
                        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                        <%= devise_error_messages! %>
							<fieldset>
								<div class="row">
								</div>
								<div class="row">
									<div class="col-sm-12 col-md-10  col-md-offset-1 ">
										<div class="form-group">
											<div class="input-group">
												<span class="input-group-addon">
													<i class="glyphicon glyphicon-envelope"></i>
												</span>
												<%= f.email_field :email, placeholder:"Email", autofocus: true, class: "form-control" %>
											</div>
										</div>
										<div class="form-group">
										    <%= f.submit "Reset Your Password", class: "btn btn-lg btn-success btn-block" %>
										</div>
									</div>
								</div>
							</fieldset>
					    <% end %>

					</div>
					<div class="panel-footer ">
						Don't have an account! <%= render "devise/shared/links" %>
					</div>
                </div>
			</div>
		</div>
	</div>
