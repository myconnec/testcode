<%= render :partial => 'partials/header_page_title', locals: {
    title: 'Forgot Password'
} %>

<!-- Content section Start --> 
<section class="section-padding">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-12 col-xs-12">
                <div class="forgot login-area">
                    <h3>
                    Forgot Password
                    </h3>
                    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "login-form" }) do |f| %>
                        <%= devise_error_messages! %>
                        <div class="form-group">
                            <div class="input-icon">
                            <i class="icon lni-user"></i>
                            <%= f.email_field :email,
                                autofocus: true,
                                autocomplete: true,
                                class: "form-control",
                                id: "email",
                                name: "user[email]",
                                placeholder:"Email Address"
                            %>
                            </div>
                        </div>
                        <div class="text-center">
                            <%= f.submit "Send me my Password", class: "btn btn-common log-btn" %>
                        </div>
                        <div class="form-group mt-4">
                            <ul class="form-links">
                                <li class="float-left">
                                    <%= link_to "Don't have an account?", '/users/sign_up' %>
                                </li>
                                <li class="float-right">
                                    <%= link_to "Back to Sign In", '/users/sign_in' %><br>
                                </li>
                            </ul>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Content section End --> 
