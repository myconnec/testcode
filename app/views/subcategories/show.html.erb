<%= render :partial => 'partials/header_search_bar', locals: {
    title: 'Subcategory'
} %>

<!-- Start Content -->
<div id="content" class="section-padding">
  <div class="container">

     <div class="row">
        <%= render :partial=> 'partials/side_menu', locals: {
            categories: @categories,
            cubcategory: @subcategory
        } %>

      <div class="col-lg-9 col-md-12 col-xs-12 page-content">

        <%= render :partial=> 'partials/breadcrumb', locals: {
            category: @category,
            subcategory: @subcategory
        } %>

        <!-- Adds wrapper Start -->
        <div class="adds-wrapper">
          <div class="tab-content">
            <div id="grid-view" class="tab-pane fade active show">
              <div class="row">
                <% @listings.each do |listing| %>
                  <%= render :partial=> 'listings/partials/item_card', locals: {
                    listing: listing,
                    size: '4'
                  } %>
                <% end %>
            </div>
          </div>
          <div id="list-view" class="tab-pane fade">
            <div class="row">
                <% @listings.each do |listing| %>
                  <%= render :partial=> 'listings/partials/item_card', locals: {
                    listing: listing,
                    size: '12'
                  } %>
                <% end %>
            </div>
          </div>
        </div>
        <!-- Adds wrapper End -->
        
        <div class="row justify-content-center pagy-padding">
          <%= pagy_bootstrap_nav(@pagy).html_safe %>
        </div>

      </div>
    </div>
  </div>
</div>
<!-- Main container End -->  
