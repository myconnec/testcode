<div class="col-sm-12 col-md-4 col-lg-3 page-sidebar">
    <aside>
        <div class="sidebar-box">
            <div class="user">
            <% if current_user.avatar_file_name? %>
                <figure>
                    <%= image_tag(
                        "/system/users/avatars/000/000/00"+current_user.id.to_s+"/thumb/"+current_user.avatar_file_name,
                        alt: current_user.username,
                        class: "img-fluid",
                        onerror: "this.onerror=null;this.src='/assets/no-photo-available.png';"
                    ) %>
                </figure>
            <% end %>
                <div class="usercontent">
                    <h3>Hello <%= current_user.username %></h3>
                </div>
            </div>
            <nav class="navdashboard">
                <ul>
                    <li>
                        <a class="active" href="dashboard.html">
                        <%= link_to '/'+current_user.username do %>
                            <i class="lni-dashboard"></i> <span>Your listings</span>
                        <% end %>
                    </li>
                    <li>
                        <%= link_to edit_user_registration_path do %>
                            <i class="lni-cog"></i> <span>Profile Settings</span>
                        <% end %>
                    </li>
                </ul>
            </nav>
        </div>
    </aside>
</div>