<% icon_sizes = Rails.configuration.serviceworker.icon_sizes %>
{
  "background_color": "#FFFFFF",
  "display": "fullscreen",
  "icons": [
  <% icon_sizes.map { |s| "#{s}x#{s}" }.each.with_index do |dim, i| %>
    {
      "src": "<%= image_path "icon--#{dim}.png" %>",
      "sizes": "<%= dim %>",
      "type": "image/png"
    }<%= i == (icon_sizes.length - 1) ? '' : ',' %>
  <% end %>
  ],
  "name": "Connechub",
  "orientation": "portrait",
  "scope": "/",
  "short_name": "Connechub",
  "start_url": "https://<%= ENV['STAGE'] == 'prd' ? 'www' : ENV['STAGE'] %>.connechub.com",
  "theme_color": "#2B98C7",
}
